<Window x:Class="InSight_Manager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InSight_Manager.View"
        xmlns:localHelpers="clr-namespace:InSight_Manager.ViewModel"
        xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:cog="clr-namespace:Cognex.InSight.Controls.Display;assembly=Cognex.InSight.Controls.Display"
        mc:Ignorable="d"
        Title="In-Sight Inspection System" Height="720" Width="1280"
        Background="#1E1E1E" WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="NavBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#33000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#99000000"/>
                    <Setter Property="Opacity" Value="1.0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FolderBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolbarBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" BorderThickness="1" BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding PrevImageCommand}"/>

        <KeyBinding Key="Right" Command="{Binding NextImageCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="{Binding ConnectionStatusColor, FallbackValue=#FF0000}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ConnectionStatusText, FallbackValue='Offline Mode'}" Foreground="#CCCCCC" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SelectedFolderPath, FallbackValue='C:\Images\Inspection_2023'}" Foreground="#777777" VerticalAlignment="Center" Margin="0,0,15,0" FontStyle="Italic" MaxWidth="300" TextTrimming="CharacterEllipsis"/>
                    <Button Command="{Binding SelectFolderCommand}" Style="{StaticResource FolderBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" Margin="0,0,8,0"/>
                            <TextBlock Text="Set Image Path"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#333337" BorderBrush="#3F3F46" BorderThickness="0,1,0,1" Padding="10,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="New Job"
                        Command="{Binding NewJobCommand}">
                    <TextBlock Text="📄"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Open Job"
                        Command="{Binding OpenJobCommand}">
                    <TextBlock Text="📂"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Save Job"
                        Command="{Binding SaveJobCommand}">
                    <TextBlock Text="💾"/>
                </Button>

                <Rectangle Width="1" Height="20" Fill="#555555" Margin="5,0"/>

                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Cut">
                    <TextBlock Text="✂"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Copy">
                    <TextBlock Text="Cx"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Paste">
                    <TextBlock Text="📋"/>
                </Button>

                <Rectangle Width="1" Height="20" Fill="#555555" Margin="5,0"/>

                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Zoom In"
                    Command="{Binding ZoomInCommand}">
                    <TextBlock Text="➕"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Zoom Out"
                    Command="{Binding ZoomOutCommand}">
                    <TextBlock Text="➖"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Zoom Fit"
                    Command="{Binding ZoomFitCommand}">
                    <TextBlock Text="⛶"/>
                </Button>

                <Rectangle Width="1" Height="20" Fill="#555555" Margin="5,0"/>

                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Manual Trigger">
                    <TextBlock Text="⚡"/>
                </Button>
                <Button Style="{StaticResource ToolbarBtnStyle}" ToolTip="Live Mode">
                    <TextBlock Text="🎥"/>
                </Button>
                <Rectangle Width="1" Height="20" Fill="#555555" Margin="5,0"/>

                <Button Style="{StaticResource ToolbarBtnStyle}"
                        ToolTip="Show/Hide Spreadsheet"
                        Command="{Binding ToggleSpreadsheetCommand}">
                    <TextBlock Text="▦" FontSize="18" VerticalAlignment="Center"/>
                </Button>

                <Rectangle Width="1" Height="20" Fill="#555555" Margin="5,0"/>

                <Button Style="{StaticResource ToolbarBtnStyle}"
                    ToolTip="Custom View"
                    Command="{Binding ToggleCustomViewCommand}">
                    <TextBlock Text="👁️"/>
                </Button>

                <Button Style="{StaticResource ToolbarBtnStyle}"
                    ToolTip="Show/Hide Graphics"
                    Command="{Binding ToggleGraphicsCommand}">
                    <TextBlock Text="🖼️"/>
                </Button>

                <Rectangle Width="1" Height="20" Fill="#555555" Margin="5,0"/>

                <Button Style="{StaticResource ToolbarBtnStyle}"
                    ToolTip="Toggle Online/Offline"
                    Command="{Binding ToggleOnlineCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Margin="0,0,5,0"
                            Fill="{Binding IsOnline, FallbackValue=Gray}"/>
                        <TextBlock Text="{Binding IsOnlineText, FallbackValue='Offline'}"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Background="Black">
            <wf:WindowsFormsHost
             localHelpers:InSightBehavior.Controller="{Binding DisplayController, Mode=OneWayToSource}"
             localHelpers:InSightBehavior.SensorSource="{Binding IsInSightSensor}"
             >
                <cog:CvsInSightDisplay x:Name="cvsInSightDisplay1" />
            </wf:WindowsFormsHost>

        </Grid>

        <Border Grid.Row="3" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="20,10">
        </Border>

    </Grid>
</Window>