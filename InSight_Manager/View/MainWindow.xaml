<Window x:Class="InSight_Manager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InSight_Manager.View"
        xmlns:localHelpers="clr-namespace:InSight_Manager.ViewModel"
        xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:cog="clr-namespace:Cognex.InSight.Controls.Display;assembly=Cognex.InSight.Controls.Display"
        mc:Ignorable="d"
        Title="In-Sight Inspection System" Height="720" Width="1280"
        Background="#1E1E1E" WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="NavBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#33000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#99000000"/>
                    <Setter Property="Opacity" Value="1.0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FolderBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding PrevImageCommand}"/>

        <KeyBinding Key="Right" Command="{Binding NextImageCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="{Binding ConnectionStatusColor, FallbackValue=#FF0000}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ConnectionStatusText, FallbackValue='Offline Mode'}"
                               Foreground="#CCCCCC" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SelectedFolderPath, FallbackValue='C:\Images\Inspection_2023'}"
                               Foreground="#777777" VerticalAlignment="Center" Margin="0,0,15,0"
                               FontStyle="Italic" MaxWidth="300" TextTrimming="CharacterEllipsis"/>

                    <Button Command="{Binding SelectFolderCommand}" Style="{StaticResource FolderBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" Margin="0,0,8,0"/>
                            <TextBlock Text="Set Image Path"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="Black">
            <Image Source="{Binding DisplayedImage}" Stretch="Uniform"
                   Visibility="{Binding IsLocalMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <wf:WindowsFormsHost
                localHelpers:InSightBehavior.SensorSource="{Binding MyInsightSensor}"
                Visibility="{Binding IsLiveMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <cog:CvsInSightDisplay x:Name="cvsInSightDisplay1" />
            </wf:WindowsFormsHost>

            <TextBlock Text="No Image Loaded"
                       Visibility="{Binding IsImageEmpty, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                       Foreground="#555555" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>

            <Button Grid.Column="0" Style="{StaticResource NavBtnStyle}" Content="◀"
                    HorizontalAlignment="Left" Margin="20,0"
                    Command="{Binding PrevImageCommand}"
                    Visibility="{Binding IsLocalMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Grid.Column="1" Style="{StaticResource NavBtnStyle}" Content="▶"
                    HorizontalAlignment="Right" Margin="20,0"
                    Command="{Binding NextImageCommand}"
                    Visibility="{Binding IsLocalMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Border VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    Background="#88000000" CornerRadius="10" Padding="15,5" Margin="0,0,0,20">
                <TextBlock Text="{Binding CurrentImageName, FallbackValue='img_sample_001.jpg'}"
                           Foreground="White" FontSize="16"/>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Result:" Foreground="#AAAAAA" FontSize="18" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding InspectionResult, FallbackValue=OK}"
                               Foreground="{Binding ResultColor, FallbackValue=#00FF00}"
                               FontSize="32" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Manual Trigger" Padding="20,10"
                            Background="#007ACC" Foreground="White" BorderThickness="0"
                            Margin="0,0,10,0"/>

                    <Button Content="Force NG Reset" Padding="20,10"
                            Background="#C50000" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>