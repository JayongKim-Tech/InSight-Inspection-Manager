<Window x:Class="Insight_Manager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Insight_Manager.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="35,34,0,0" VerticalAlignment="Top" Height="35" Width="63" FontWeight="Bold" Command = "{Binding ConnectCommand}"/>
        <TextBox HorizontalAlignment="Left" Margin="115,34,0,0" TextWrapping="Wrap" Text="{Binding IpAddress}" VerticalAlignment="Top" Width="120" Height="35" FontSize="22" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="35,87,0,0" TextWrapping="Wrap" Text="{Binding Status}" VerticalAlignment="Top" Width="200" Height="42" FontSize="28" TextAlignment="Center" FontWeight="Bold" IsReadOnly="True"/>

    </Grid>
</Window>
